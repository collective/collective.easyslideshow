<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <object name="object_buttons" meta_type="CMF Action Category">
  <object name="enable_slideshow" meta_type="CMF Action" i18n:domain="plone">
   <property name="title" i18n:translate="">Enable Slideshow</property>
   <property name="description" i18n:translate=""></property>
   <property name="url_expr">string:$object_url/@@slideshow_tool/enable</property>
   <property name="available_expr">object/@@slideshow_tool/disabled|nothing</property>
   <property name="permissions">
    <element value="Manage properties" />
   </property>
   <property name="visible">True</property>
  </object>
  
  <object name="disable_slideshow" meta_type="CMF Action" i18n:domain="plone">
   <property name="title" i18n:translate="">Disable Slideshow</property>
   <property name="description" i18n:translate=""></property>
   <property name="url_expr">string:$object_url/@@slideshow_tool/disable</property>
   <property name="available_expr">object/@@slideshow_tool/enabled|nothing</property>
   <property name="permissions">
    <element value="Manage properties" />
   </property>
   <property name="visible">True</property>
  </object>
 </object>
</object>
